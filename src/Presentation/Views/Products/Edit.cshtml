@{ 
    ViewData["Title"] = "Products";
}

@model Presentation.Models.ProductModel

<div class="row">
    <div class="col-md-12">
        <h1>Edit Product</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" asp-action="OnPut" asp-anti-forgery="true" class="w-100 bg-white p-3 mt-3 border" method="post">
            <div class="form-row">
                <div class="col-md-12">
                    <div class="mb-2 ml-3" asp-validation-summary="All"></div>
                </div>
                <input id="product-id" type="hidden" asp-for="Id"/>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" for="product-name">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="product-name"
                        aria-describedby="product-name" placeholder="Enter a product name">
                        <small id="product-name-help" class="form-text text-muted">
                        e.g: Xiaomi Note 10
                        </small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category" for="product-category">Category</label>
                        <select asp-for="Category" id="product-category" class="form-control">
                            <option selected>Choose...</option>
                        </select>
                        <small id="product-category" class="form-text text-muted">
                        Don't find what you want? <a asp-controller="Categories" asp-action="Create">create a new category</a>
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Type" for="product-type">Type</label>
                        <select asp-for="Type" id="product-type" class="form-control">
                            <option value = "">Choose...</option>
                        </select>
                        <small id="product-type" class="form-text text-muted">
                        Don't find what you want? <a asp-controller="Types" asp-action="Create">create a new type</a>
                        </small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Size" for="product-size">Size</label>
                        <select asp-for="Size" id="product-size" class="form-control">
                            <option value = "">Choose...</option>
                        </select>
                        <small id="product-size" class="form-text text-muted">
                        Don't find what you want? <a asp-controller="Sizes" asp-action="Create">create a new size</a>
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Price" for="product-price">Price</label>
                        <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" id="product-price"
                        aria-describedby="product-price" placeholder="Enter a product price">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Tags" for="product-tags">Tags</label>
                        <input asp-for="Tags" type="text" class="form-control" id="product-tags"
                        aria-describedby="product-tags" placeholder="Enter a product tags (separed by comma)">
                        <small id="product-tags-help" class="form-text text-muted">
                        e.g: Smarthphone, Xiaomi
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Image" for="product-image">Image</label>
                        <input asp-for="Image" type="file" disabled class="form-control-file" id="product-image"
                        aria-describedby="product-image"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Preview</label>
                        <div>
                            <img id="image-preview" width="auto" height="150"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" for="product-description">Description</label>
                        <textarea asp-for="Description" class="form-control" id="product-description"
                        rows="3" max="5000"></textarea>
                        <small id="product-description" class="form-text text-muted">
                        max: 500 characters
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-row d-flex justify-content-end">
                <button type="button" class="btn btn-secondary mr-3" data-toggle="modal" data-target="#delete-modal">
                Delete
                </button>
                <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="delete-modal" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="delete-modal-label">Delete Record</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure want to delete this record?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-danger" id="btn-delete">Yes, delete</button>
                        </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/js/products.js"></script>
}