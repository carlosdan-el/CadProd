@model Presentation.Models.ProductModel

<div class="row">
    <div class="col-md-12" id="page-error-content">
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h1>New Product</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" asp-action="OnPost" asp-anti-forgery="true" class="w-100 bg-white p-3 mt-3 border" method="post">
            <div class="form-row">
                <div class="col-md-12">
                    <div class="mb-2 ml-3" asp-validation-summary="All"></div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" for="product-name">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="product-name"
                        aria-describedby="product-name" placeholder="Enter a product name">
                        <small id="product-name-help" class="form-text text-muted">
                        e.g: Xiaomi Note 10
                        </small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category" for="product-category">Category</label>
                        <select asp-for="Category" id="product-category" class="form-control">
                            <option selected>Choose...</option>
                        </select>
                        <small id="product-category" class="form-text text-muted">
                        Don't find what you want? <a asp-controller="Categories" asp-action="Create">create a new category</a>
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Type" for="product-type">Type</label>
                        <select asp-for="Type" id="product-type" class="form-control">
                            <option selected>Choose...</option>
                        </select>
                        <small id="product-type" class="form-text text-muted">
                        Don't find what you want? <a asp-controller="Types" asp-action="Create">create a new type</a>
                        </small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Size" for="product-size">Size</label>
                        <select asp-for="Size" id="product-size" class="form-control">
                            <option selected value = "">Choose...</option>
                        </select>
                        <small id="product-size" class="form-text text-muted">
                        Don't find what you want? <a asp-controller="Sizes" asp-action="Create">create a new size</a>
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Price" for="product-price">Price</label>
                        <input asp-for="Price" type="number" class="form-control" id="product-price"
                        aria-describedby="product-price" placeholder="Enter a product price">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Tags" for="product-tags">Tags</label>
                        <input asp-for="Tags" type="text" class="form-control" id="product-tags"
                        aria-describedby="product-tags" placeholder="Enter a product tags (separed by comma)">
                        <small id="product-tags-help" class="form-text text-muted">
                        e.g: Smarthphone, Xiaomi
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Image" for="product-image">Image</label>
                        <input asp-for="Image" type="file" class="form-control-file" id="product-image"
                        aria-describedby="product-image"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Preview</label>
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="120" height="120">
                                <path fill-rule="evenodd" d="M19.25 4.5H4.75a.25.25 0 00-.25.25v14.5c0 .138.112.25.25.25h.19l9.823-9.823a1.75 1.75 0 012.475 0l2.262 2.262V4.75a.25.25 0 00-.25-.25zm.25 9.56l-3.323-3.323a.25.25 0 00-.354 0L7.061 19.5H19.25a.25.25 0 00.25-.25v-5.19zM4.75 3A1.75 1.75 0 003 4.75v14.5c0 .966.784 1.75 1.75 1.75h14.5A1.75 1.75 0 0021 19.25V4.75A1.75 1.75 0 0019.25 3H4.75zM8.5 9.5a1 1 0 100-2 1 1 0 000 2zm0 1.5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" for="product-description">Description</label>
                        <textarea asp-for="Description" class="form-control" id="product-description"
                        rows="3" max="5000"></textarea>
                        <small id="product-description" class="form-text text-muted">
                        max: 500 characters
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-row d-flex justify-content-end">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/js/category.js"></script>
}