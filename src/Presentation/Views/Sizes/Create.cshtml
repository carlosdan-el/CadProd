@{
    ViewData["Title"] = "Sizes";
}

@model Presentation.Models.SizeModel;

<div class="row">
    <div class="col-md-12">
        <h1>New Size</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" asp-action="OnPost" asp-anti-forgery="true" class="w-100 bg-white p-3 mt-3 border" method="post">
            <div class="form-row">
                <div class="col-md-12">
                    <div class="mb-2 ml-3" asp-validation-summary="All"></div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Name" for="size-name">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="size-name"
                        aria-describedby="size-name" placeholder="Enter a size name">
                        <small id="size-name-help" class="form-text text-muted">
                        e.g: Big
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" for="category-description">Description</label>
                        <textarea asp-for="Description" class="form-control" id="category-description"
                        rows="3" maxlength="500"></textarea>
                        <small id="category-description-help" class="form-text text-muted">
                        max: 500 characters
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-row d-flex justify-content-end">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>